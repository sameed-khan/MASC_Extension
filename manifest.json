{
    "manifest_version": 2,
    "name": "Research Translater",
    "version": "1.0.0",
    "description": "Research without the big fancy words",

    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "https://*/"
    ],

    "content_scripts": [
        {
            "matches": ["https://jamanetwork.com/journals/jamainternalmedicine/fullarticle/*"],
            "js": ["testreplace.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}