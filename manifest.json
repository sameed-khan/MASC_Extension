{
    "manifest_version": 2,
    "name": "Research Translater",
    "version": "1.0.0",
    "description": "Research without the big fancy words",

    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "https://*/",
        "https://docs.google.com/spreadsheets/",
        "https://sheets.googleapis.com/*"
    ],

    "content_scripts": [
        {
            "matches": ["https://jamanetwork.com/journals/jamainternalmedicine/fullarticle/*",
            "https://ncbi.nlm.nih.gov/pmc/articles/PMC*"],
            "js": ["testreplace.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}