{
    "name": "Research Translater",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Research without the big fancy words",

    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "webNavigation"       
    ],

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "service_worker":"background.js"
    }
}