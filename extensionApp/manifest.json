{
    "name": "Research Translater",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Research without the big fancy words",

    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting",
        "webNavigation"       
    ],

    "content_scripts": [
        {
            "matches": ["https://www.ncbi.nlm.nih.gov/pmc/articles/*",
                        "http://wwww.ncbi.nlm.nih.gov/pmc/articles/*"],
            "css": ["tooltip_styles.css"]
        }
    ],

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],

    "background": {
        "service_worker":"background.js"
    }
}